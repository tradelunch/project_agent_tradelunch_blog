# Environment Variables Example
# Copy this file to .env and fill in your values
# Usage: cp .env.example .env

# ==================== Environment ====================
NODE_ENV=development

# ==================== LLM Configuration ====================
LLM_PROVIDER=local  # local, openai, anthropic

# Ollama (Local LLM)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=qwen3:8b

# OpenAI (optional)
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o-mini

# Anthropic (optional)
ANTHROPIC_API_KEY=
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022

# Common LLM Settings
LLM_TEMPERATURE=0.3
LLM_MAX_TOKENS=2048

# ==================== AWS Configuration ====================
AWS_REGION=us-west-1
AWS_ACCESS_KEY_ID=your-access-key-id
AWS_SECRET_ACCESS_KEY=your-secret-access-key

# S3 Configuration
AWS_S3_BUCKET=my-blog-bucket
S3_REGION=us-west-1

# RDS CA Certificate (for SSL connection, optional) -> typescript
AWS_RDS_CA=

# ==================== PostgreSQL Database ====================
DB_PG_HOST=localhost
DB_PG_PORT=5432
DB_PG_DATABASE=tradelunch
DB_PG_USER=super
DB_PG_PASSWORD=your-password

# SSL Configuration (matching TypeScript dialectOptions.ssl)
DB_SSL_ENABLED=true
DB_SSL_REJECT_UNAUTHORIZED=false  # Set to true for production with CA cert
DB_SSL_CA_PATH=configs/certs/rds-combined-ca-bundle.pem  # RDS CA bundle for production

# ==================== EC2 / SSH Tunnel (optional) ====================
# Only needed for development with SSH tunnel to RDS
EC2_HOST=
EC2_PORT=22
EC2_USERNAME=ec2-user

# ==================== CDN Configuration ====================
CDN_ASSET_POSTS=https://posts.prettylog.com

# ==================== Domain Configuration ====================
SITE_DOMAIN=http://localhost:3000
API_SITE_DOMAIN=https://my-api.prettylog.com
BLOG_BASE_URL=https://my.prettylog

# ==================== User Configuration ====================
DEFAULT_USER_ID=2
DEFAULT_USERNAME=taeklim

# ==================== MCP Configuration ====================
MCP_SERVER_PATH=./mcp-server/build/index.js
MCP_ENABLED=false

# ==================== Logging ====================
LOG_LEVEL=INFO
